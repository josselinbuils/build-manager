{
  "name": "build-manager",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "add:staged": "exec-staged 'git add' '\\.(js|tsx?|scss)$'",
    "build": "rimraf dist && tsc",
    "lint": "tslint -p tsconfig.json",
    "lint:staged": "exec-staged 'yarn lint' '\\.ts$'",
    "prettier:staged": "exec-staged 'prettier --write' '\\.(js|ts)$'",
    "start": "node dist/server.js",
    "start:dev": "concurrently --kill-others 'yarn build -w' 'nodemon dist/server.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:staged && yarn prettier:staged && yarn add:staged"
    }
  },
  "dependencies": {
    "@josselinbuils/utils": "^0.1.2",
    "@types/node": "^10.17.17",
    "@types/ssh2": "^0.5.41",
    "@types/uuid": "^7.0.2",
    "@types/ws": "^7.2.3",
    "chalk": "^3.0.0",
    "githubhook": "^1.9.3",
    "jsonschema": "^1.2.5",
    "rimraf": "^3.0.2",
    "ssh2": "^0.8.9",
    "typescript": "^3.8.3",
    "uuid": "^7.0.2",
    "ws": "^7.2.3"
  },
  "devDependencies": {
    "@josselinbuils/exec-staged": "^0.1.1",
    "@josselinbuils/tslint": "^5.1.0",
    "concurrently": "^5.1.0",
    "husky": "^4.2.3",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2",
    "tslint": "^6.1.0"
  },
  "prettier": {
    "singleQuote": true
  }
}
