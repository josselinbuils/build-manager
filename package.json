{
  "name": "build-manager",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "tslint -p tsconfig.json",
    "pre-commit": "exec-staged",
    "start": "node dist/server.js",
    "start:dev": "concurrently --kill-others 'yarn build -w' 'nodemon dist/server.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:staged && yarn prettier:staged && yarn add:staged"
    }
  },
  "dependencies": {
    "@josselinbuils/utils": "^0.4.2",
    "chalk": "^4.1.1",
    "githubhook": "^1.9.3",
    "jsonschema": "^1.4.0",
    "ssh2": "^0.8.9",
    "uuid": "^8.3.2",
    "ws": "^7.4.5"
  },
  "devDependencies": {
    "@josselinbuils/eslint-config-typescript": "^0.1.1",
    "@josselinbuils/exec-staged": "^1.0.2",
    "@josselinbuils/tslint": "^5.1.0",
    "@types/node": "^14.17.0",
    "@types/ssh2": "^0.5.46",
    "@types/uuid": "^8.3.0",
    "@types/ws": "^7.4.4",
    "concurrently": "^6.1.0",
    "eslint": "^7.27.0",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4"
  },
  "prettier": {
    "singleQuote": true
  },
  "engines": {
    "node": "^14"
  }
}
